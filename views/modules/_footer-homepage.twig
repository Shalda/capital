<div class="container">
    <div class="news">
        <div class="news__header">{% for news in footer.newsHeader %}
                <span class="news__last">{{ news.latest }}</span>
                <span>{{ news.all }}</span>
                <a href="{{ news.url }}" class="icon-{{ news.icon }} icon"><span>{{ news.icon }}</span></a>
            {% endfor %}
        </div>
        <div class="article">

                <ul class="article__container">
                    {% for article in footer.articles %}
                    <li class="article__item">
                        <a  class="article__link" href="{{ article.url }}">
                            <img src="./images/{{ article.imgUrl }}" alt="news image">
                            <div class="article__box">
                                <p class="article-text">{{ article.text }}</p>
                                <p class="article-date">{{ article.date }}</p>
                            </div>
                        </a>
                    </li>
                    {% endfor %}

                </ul>

        </div>
    </div>
    <div class="subscribe">
        {% for email in footer.emailLetter %}
            <div class="subscribe__header">
                <span class="subscribe__bonus">{{ email.bonus }}</span>
                <span class="subscribe__value">{{ email.bonusValue }}</span>
                <p class="subscribe__condition">{{ email.condition }}</p>
            </div>
            <form action="#" method="post" class="subscribe__form">
                <div class="input-container">
                    <input type="text" class="subscribe__box" id="subscribe-field" placeholder="{{ email.placeholder }}">
                    <button type="submit">{{ email.submit }}</button>
                </div>
            </form>
            <p class="subscribe__text">{{ email.letter }}</p>

        {% endfor %}
    </div>
</div>